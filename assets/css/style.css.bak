body {
    color: #777777;
    font-family: 'Arial', 'Helvetica Neue', Helvetica, sans-serif;
    box-sizing: border-box;
    font-size: 18px;
    line-height: 150%;
}

#container {
    width: 960px;
    margin: 40px auto;
    position: relative;
    background-color: #4aaaa5;
}

h1,
h2,
{
    font-family: 'Times New Roman', 'Georgia', Times, serif;
}

header {
    background-color: #ffffff;
    border-bottom: solid #cccccc 2px;
    position: relative;
    width: 100%;
    height: 80px;
}

#nav {
    position: absolute;
    right: 0;
    bottom: 2px;
    padding: 0;
}

#profile_name {
    padding: 20px;
    background-color: #4aaaa5;
    color: #ffffff;
    position: absolute;
    left: 40px;
    bottom: 2px;
    width: 160px;
    height: 40px;
    text-align: center;
}

h1 {
    margin: 0;
    font-size: 38px;
}

h2 {
    position: absolute;
    margin: 0;
    left: 10px;
    bottom: 20px;
    color: #4aaaa5;
    font-size: 28px;
}

h3 {
    font-weight: normal;
}

p {
    margin-top: 10px;
}

#main_content {
    position: relative;
    background-image: url("../images/old_moon.png");
    background-repeat: repeat;
    width: 960px;
    height: 680px;
}

article {
    border: solid #cccccc 2px;
    background-color: #ffffff;
    float: left;
    margin-top: 60px;
	margin-left: 35px; 
    width: 530px;
    padding: 20px;
}

#profile_pic {
    float: left;
    width: 200px;
    height: 200px;
    margin: 20px 20px 20px 0px;
}

aside {
    border: solid #cccccc 2px;
    background-color: #ffffff;
    float: right;    
    
    width: 220px;
    padding: 20px;
}

footer {
    background-color: #666666;
    padding: 30px;
    margin: 10px 0px;
    text-align: right;
    color: #cccccc;
    font-size: 14px;
}

ul.topnav {
    list-style-type: none;
    margin: 0;
    padding: 0;
}

ul.topnav li {
    display: inline-block;
    padding: 14px 10px;
}

ul li a {
    display: block;
    text-align: center;
    padding: 0;
    text-decoration: none;
    color: #777777;
}

ul.sidenav {
    list-style-type: none;
    margin-top: 10px;
    padding: 0;
}

ul.sidenav li {
    display: inline-block;
}

ul.sidenav li a img {
    height: 60px;
    width: 60px;
    margin: 5px;
}

form {
    margin-top: 10px;
}

.txtBox {
    width: 95%;
    padding: 5px 10px;
    margin: 2px 0px;
    display: block;
}

.msgBox {
    height: 150px;
}

label {
    display: block;
    margin-top: 15px;
}

input[type=submit] {
    background-color: #4aaaa5;
    border: none;
    color: white;
    padding: 16px 32px;
    text-decoration: none;
    margin: 25px 2px 10px 2px;
    cursor: pointer;
}

.portfolio_div {
    position: relative;
    padding: 0px;
    width: 230px;
    height: 140px;
    margin-top: 20px;
}

.portfolio_div:nth-child(even) {
    float: left;
    margin-left: 0px
}

.portfolio_div:nth-child(odd) {
    float: right;
    margin-right: 0px
}

.portfolio_image {
    position: absolute;
    width: 230px;
    height: 140px;
    margin: 0px;
}

.portfolio_link {
    position: absolute;
    margin: 0;
    bottom: 8px;
    width: 230px;
    padding: 8px 0px;
    background-color: #4aaaa5;
    border: none;
    color: white;
    text-decoration: none;
    text-align: center;
}


@media screen and (max-width: 980px) {

    #container {
        width: 960px;
        margin: 40px auto;
        position: relative;
    }    

}

 /*Rules for screen widths at 768px or lower*/
@media screen and (max-width: 768px) {

    #container {
        width: 768px;
        margin:20px auto;
        position: relative;
    }

    article {
        float: left;
    }

    aside {
        float: left;

    }    

}
